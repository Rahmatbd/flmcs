<%- model_class = Flexiload -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @flexiload.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
  <dd><%= @flexiload.humanize_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @flexiload.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @flexiload.real_status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:flmcs_order_id) %>:</strong></dt>
  <dd><%= @flexiload.flmcs_order_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:flmcs_transaction_id) %>:</strong></dt>
  <dd><%= @flexiload.flmcs_transaction_id %></dd>
</dl>

<%= link_to t('refresh'),
            flexiload_path(@flexiload), :class => 'btn btn-default' %>
<%= link_to t('.back', :default => t("helpers.links.back")),
              flexiloads_path, :class => 'btn btn-default'  %>
