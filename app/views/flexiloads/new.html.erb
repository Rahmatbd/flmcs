<%- model_class = Flexiload -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.new', 'New %{model}'], :model => model_class.model_name.human.titleize %></h1>
</div>

<%= simple_form_for @flexiload, :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :phone %>
    <%= error_span(@flexiload[:phone]) %>
    <%= f.input :type, as: :radio_buttons, collection: Flexiload::type_options %>
    <%= error_span(@flexiload[:type]) %>
    <%= f.input :amount %>
    <%= error_span(@flexiload[:amount]) %>

    <%= f.button :submit, :class => 'btn-primary', value: t('flexiload.create') %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                flexiloads_path, :class => 'btn btn-default' %>
<% end %>

